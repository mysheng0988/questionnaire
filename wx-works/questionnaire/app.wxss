}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #ccc;
  margin: 0 10rpx;
  border-radius: 10rpx;
}
/*复选框外框选中样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #1296DB;
}
/*复选框选中后内部样式*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #1296DB;
  border-radius: 10rpx;
  transform: translate(-50%, -50%) scale(0.5);
  -webkit-transform: translate(-50%, -50%) scale(0.5);
}

radio .wx-radio-input {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #ddd;
  border-radius: 100%;
  background: none;
  margin: 0 10rpx;
}

/*单选按钮选中后内部样式*/

radio .wx-radio-input.wx-radio-input-checked {
  border: 4rpx solid #1296DB!important;
}
.placeholder{
  font-size: 25rpx;
  color: #999;
}
radio .wx-radio-input.wx-radio-input-checked::before {

  background: #1296DB;
  border-radius: 100%;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 弹窗 */
.modals-box{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top:0;
  left: 0;
  z-index: 111
}
.modals-box .hideModal{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 15%;
  right: 15%;
  vertical-align: middle;
}
.modals-cancel{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.6)
}
.dialog-body{
  width:500rpx;
  height: 420rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0 60rpx 60rpx rgba(131, 98, 43, 0.1)
}
.modals-box .title{
